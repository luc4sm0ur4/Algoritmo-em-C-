#include <stdio.h>

int main()
{
    float numero1, numero2, soma, subtracao, divisao;
    
    printf("Calculadora ( Adição, subtração e divisão). \n");
    printf("OBS: O primeiro número devera ser maior que o segundo número. \n \n");
        
    printf("Digite o primeiro numero: ");
    scanf("%f", &numero1);
    printf("Digite o segundo numero: ");
    scanf("%f", &numero2);
    
    soma = (numero1 + numero2);
    printf("A soma é: %.2f\n", soma);
    
    subtracao = (numero1 - numero2);
    printf ("O resultado da subtração é: %f\n", subtracao);
    
    divisao = (numero1 / numero2);
    printf ("O resultado da divisão é: %f\n", divisao);
    
    return 0;
}
